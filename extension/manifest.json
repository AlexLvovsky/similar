{
  "name":           "SimilarWeb Extension",
  "version":        "0.2",
  "description":    "SimilarWeb Extension",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions":    [
    "identity",
    "identity.email",
    "webNavigation",
    "storage",
    "activeTab",
    "<all_urls>",
    "cookies",
    "declarativeContent",
    "tabs"
  ],
  "manifest_version": 2
}
